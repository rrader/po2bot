# Telegram Bot Token from @BotFather
BOT_TOKEN=your_bot_token_here

# Admin Group ID (use negative number for groups)
# To get the ID, add the bot to the group and send a message, then check bot logs
# or use a helper bot like @RawDataBot
ADMIN_GROUP_ID=-1001234567890

# Private Group ID where approved users will be invited
# The bot must be an admin in this group with "Invite users via link" permission
PRIVATE_GROUP_ID=-1001234567890

# OpenAI API Key for document parsing
OPENAI_API_KEY=your_openai_api_key_here

# Google Sheets credentials JSON (as a single line)
# Get from https://console.cloud.google.com/ -> Service Account -> Create Key
GOOGLE_SHEETS_CREDS={"type":"service_account","project_id":"...","private_key":"..."}

# Worksheet name (default: "Test" for staging, "Sheet1" for production)
WORKSHEET_NAME=Test
